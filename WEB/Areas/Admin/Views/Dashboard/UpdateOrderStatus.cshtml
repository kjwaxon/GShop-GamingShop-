@{
    ViewData["Title"] = "Update Order Status";
}
@model UpdateOrderDTO

<h2>Update Order Status</h2>

<form asp-action="UpdateOrderStatus" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="OrderStatusId" class="control-label">Order Status</label>
        <select asp-for="OrderStatusId" class="form-control" asp-items="Model.Statuses"></select>
        <span asp-validation-for="OrderStatusId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
