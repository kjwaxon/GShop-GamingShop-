@{
    ViewData["Title"] = "Orders";
}
@model IEnumerable<Order>

<div class="mt-2">
    <h4>Orders</h4>
    @if (Model != null && Model.Any())
    {
        <table class="orderTable display" style="width:100%">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>Payment Method</th>
                    <th>Order Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Name</td>
                        <td>@order.Email</td>
                        <td>@order.MobileNumber</td>
                        <td>@order.PaymentMethod</td>
                        <td>@order.OrderStatus.StatusName</td>
                        <td>
                            <a asp-action="GetOrderById" asp-route-id="@order.Id" class="btn btn-primary">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h5>No orders</h5>
    }
</div>
