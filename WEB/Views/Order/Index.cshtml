@using ApplicationCore.Entities.Abstract
@model List<GetOrderVM>

@{
    ViewData["Title"] = "Orders";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Orders</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Total Amount</th>
                            <th>Payment Status</th>
                            <th>Address</th>
                            <th>Order Details</th>
                            <th>Created Date</th>
                            <th>Updated Date</th>
                            <th>Status</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.TotalAmount.ToString("C2", new System.Globalization.CultureInfo("en-US"))</td>
                                <td>@order.PaymentStatus</td>
                                <td>
                                    @order.AddressLine1<br />
                                    @order.AddressLine2<br />
                                    @order.City, @order.ZipCode<br />
                                    @order.Country
                                </td>
                                <td>
                                    <ul>
                                        @foreach (var detail in order.OrderDetails)
                                        {
                                            <li>
                                                @detail.ProductName - @detail.Quantity x @detail.UnitPrice.ToString("C2", new System.Globalization.CultureInfo("en-US"))
                                                <img src="@detail.ImageUrl" alt="@detail.ProductName" width="50" />
                                            </li>
                                        }
                                    </ul>
                                </td>
                                <td>@order.CreatedDate.ToString("g")</td>
                                @if (order.UpdatedDate is not null)
                                {
                                    <td>@order.UpdatedDate?.ToString("g")</td>
                                }
                                else
                                {
                                    <td> - </td>
                                }
                                @if (order.Status == Status.Active)
                                {
                                    <td class="text-success">Active</td>
                                }
                                else
                                {
                                    <td class="text-primary">Updated</td>
                                }
                                <td>
                                    <a class="btn btn-outline-success" asp-action="UpdateOrder" asp-route-id="@order.Id">Update</a>
                                </td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@order.Id">
                                        Delete
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="deleteModal-@order.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel">Delete Warning</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete this order?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <a asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger">Yes</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
