@{
    ViewData["Title"] = "Update Stock";
    Layout = "_LayoutAdmin";
}
@model UpdateStockDTO

<div style="width:50%">
    <h2> Update Stocks </h2>
    
    <form asp-action="UpdateStock">
        <input type="hidden" asp-for="ProductId" />

        <div class="my-2">
            <label>Quantity</label>
            <input type="number" class="form-control" asp-for="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>
